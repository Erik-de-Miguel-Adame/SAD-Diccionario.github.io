---
interface Props {
  href: string;
  alt: string;
  titulo: string;
  descripcion: string;
}

const { href, alt, titulo, descripcion } = Astro.props;
---

<article class="flex w-full h-full gap-4">
  <div>
    <img src={href} alt={alt} class="w-full h-full" />
  </div>
  <div>
    <h3 class="text-xl text-pink-600 font-bold mb-4">{titulo}</h3>
    <p>{descripcion}</p>
  </div>
</article>
