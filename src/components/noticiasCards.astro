---
interface Props {
    title: string;
    description: string;
    href: string;
}
const { href, title, description } = Astro.props;
import img1 from "../assets/img/manual/noticias/gusano_stuxnet.webp";
---

<a href={href} target="_blank" class="group">
<article class="flex p-6 m-4 md:m-12 rounded-lg bg-white dark:bg-gray-800 shadow-md gap-4 h-32 md:h-64 group-hover:scale-105 transition-all ease-in-out">
    <img src={img1.src} alt="gusano_stuxnet.webp" class="w-1/3 h-auto" />
    <div class="w-2/3 break-words overflow-auto">
        <h1 class="text-2xl font-bold">{title}</h1>
        <p class="">{description}</p>
    </div>
</article>
</a>