---
const { subTitulo, src, alt } = Astro.props;
interface Props {
  subTitulo: string;
  src: string;
  alt: string;
}
---

<header
  class="text-violet-600 dark:text-pink-600 text-center relative w-full h-96 md:h-[600px]"
>
  <img src={src} alt={alt} class="w-full h-full" />
  <div
    class="flex flex-col justify-center items-center absolute top-0 left-0 w-full h-full"
  >
    <h1 class="text-2xl font-bold">
      Manual de Seguridad y Alta Disponibilidad
    </h1>
    <h2 class="text-2xl font-bold">{subTitulo}</h2>
  </div>
</header>
