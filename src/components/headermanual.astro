---
import Link from "../components/linkmanualheader.astro";
import NavegationMenu from "../components/navmenu.astro";
const { title } = Astro.props;
interface Props {
  title: string;
}
---

<header class="flex flex-col justify-center items-center">
  <div class="flex justify-center items-center w-full relative">
    <slot />
    <header
      class="text-2xl md:text-4xl font-bold bg-slate-100 absolute rounded bg-opacity-70 max-w-80 md:max-w-[1200px] p-4 text-center"
    >
      <h1 class="break-words">{title}</h1>
    </header>
  </div>
</header>
<NavegationMenu />
