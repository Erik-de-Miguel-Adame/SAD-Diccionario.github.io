---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import gifterror from "../assets/img/404-error/404error.gif";
---

<Layout title="404 error">
  <div class="flex justify-center items-center w-full h-screen gap-8">
    <Image src={gifterror} alt="404-gift-error" />
    <div class="flex flex-col justify-center items-center">
      <h1 class="font-semibold text-4xl mb-4">404 Error</h1>
      <a
        href="/"
        class="text-xl text-white bg-pink-600 hover:bg-pink-800 transition-all ease-in-out px-4 rounded-full font-bold"
        >Inicio</a
      >
    </div>
  </div>
</Layout>
